{
    "manifest_version": 3,
    "name": "Press skip ad button!",
    "description": "Automatically skip YT ads",
    "version": "1.0",
    "permissions": [
        "tabs"
    ],
    "icons": {
        "50": "skip.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.youtube.com/watch*"
            ],
            "js": [
                "index.js"
            ]
        }
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": "skip.png"
    }
}